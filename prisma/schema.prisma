generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Note {
  id        String   @id @default(cuid())
  content   String
  label     String?  // Optional label for QR code (auto-generated if not provided)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Future: for private notes
  // userId    String?
